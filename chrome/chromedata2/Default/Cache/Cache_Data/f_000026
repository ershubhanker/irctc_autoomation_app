if(data["name"]=="timer"){
     
     var countDownDate = data["countdown"]+"000";
    //  var dest =  new Date("june 9, 2022 06:30:00").getTime();

var x = setInterval(function() {
    var now = new Date().getTime();
    // var now = new Date();
    // var now2 = now.getDate()+'/'+(now.getMonth()+1)+'/'+now.getFullYear()+" "+now.getHours() + ":" + now.getMinutes() + ":" + now.getSeconds();
    // var start = new Date(now2).geTime();
    var diff = countDownDate - now;
    // var diff = data["countdown"]+"000" - now;
    var days = Math.floor(diff / (1000 * 60 * 60 * 24)); 
    // alert(days);
    // var hrs = days*58;
    var hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)) + (days * 24);
    var mins = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    var secs = Math.floor((diff % (1000 * 60)) / 1000);
    // days = (days < 10) ? "0"+days : days;
    hours = (hours < 10) ? "0"+hours : hours;
    mins = (mins < 10) ? "0"+mins : mins;
    secs = (secs < 10) ? "0"+secs: secs; 
    
    if (diff < 0) {
    clearInterval(x);
    // days = "00";
    hours = "00";
    mins = "00";
    secs = "00";
  }
    
 document.getElementById("timer1").innerHTML = hours +'  ' +mins +'  '+secs;
    
});
setTimeout(function(){
    window.clearInterval(x)
},30000)

 document.getElementById("bg").innerHTML=timer;
 }
