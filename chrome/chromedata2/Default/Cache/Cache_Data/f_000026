var elem = document.getElementsByTagName('a')[0];
if(json['click_macro']){
    elem.href = elem.href
    var target = json['click_macro'];
    var url = elem.href;
    elem.href = "https://ad.hockeycurve.com/clk.php?redirect="+encodeURIComponent(url)+"&tracking="+encodeURIComponent(target)+"&stats="+encodeURIComponent(json['stats'])+"&token_id="+encodeURIComponent(json['token_id']);
}


var trigger_iframe = function(src){
    try{
        var body = document.getElementsByTagName('body')[0];
        var iframe = document.createElement('iframe');
        iframe.src = src;
        iframe.style['display'] = 'none'
        body.appendChild(iframe);
    }
    catch(e){exception(e)}
}
var ishover = false;
var triggered = false;
function triggerHover(){
    if(ishover && !triggered && json['click_macro']){
        triggered = true;
        trigger_iframe("piggyback?redirect=hcid&token_id="+json["token_id"]);
        trigger_iframe("hover?redirect=hcid&stats="+json["stats"]+"&token_id="+json["token_id"]);
    }
}
window.addEventListener("mouseover",function(){
    if(!ishover){
        ishover = true;
        setTimeout(triggerHover,2000)
    }
})
window.addEventListener("mouseout",function(){
    ishover = false;
})


function tk(){
    trigger_iframe("https://adx.hockeycurve.com/tk?client="+json['client'])
}
if(window.location.href.indexOf("&tk=1")!=-1){
    trigger_iframe("piggyback?redirect=hcid");
    setTimeout(tk,5000)
}

function format(str,data){
  return str.replace(/\$\([^\)]*\)/g,function(m,n){
    var key = m.substr(2,m.length-3)
    return data[key]==undefined? m : data[key]
  })
}

var template = document.getElementById("outerwrapper").innerHTML
function render(){
 document.getElementById("outerwrapper").innerHTML = format(template,meta).replace(/data-src/g,'src')
}
render()
