<script>

function cAnim2() {
  var tl = new TimelineMax({repeat:3,repeatDelay:3})
    tl.to(".f1",0.3,{opacity:0,ease:Power0.easeNone},"+=3");
    tl.from(".f2",0.3,{opacity:0,ease:Power0.easeNone});
}
 cAnim2();
 
 function cAnim3() {
  var tl = new TimelineMax({repeat:0,delay:25})
    tl.to(".f1",0.3,{opacity:1,ease:Power0.easeNone});
    tl.to(".f2",0.3,{opacity:0,ease:Power0.easeNone},"=-3");
}
 cAnim3();
 
function cAnim() {
  var tl = new TimelineMax({repeat:10,repeatDelay:1})
    tl.to('#cta1',0.3,{opacity:0,ease:Power0.easeIn},'=+1')
    tl.from('#cta2',0.3,{opacity:1,ease:Power0.easeIn})
}
cAnim()


</script>